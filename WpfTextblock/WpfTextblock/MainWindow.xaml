<Window x:Class="WpfTextblock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTextblock"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="TL1" FontSize="50" Width="auto" Height="100" Background="Aqua" VerticalAlignment="Top" TextWrapping="Wrap" MouseEnter="TextBlock_MouseEnter" Grid.ColumnSpan="2">
            <Bold>Xin Chào - <Italic><Underline>Hello</Underline> </Italic> </Bold>- <Hyperlink>Ohayyo</Hyperlink>
        </TextBlock>
        <TextBlock x:Name="TL2" VerticalAlignment="Bottom" Grid.ColumnSpan="2">
            AAAAAAA
        </TextBlock>
    </Grid>
</Window>
